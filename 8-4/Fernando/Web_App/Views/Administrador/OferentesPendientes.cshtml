@Html.CtrlModalMessage(viewName: "OferentesPendientes", id: "rechazarModal", modalFormId: "rechazarModalMessage", title: LanguageHelper.Rechazar, text: LanguageHelper.ConfirmacionEstado, btnActionId: "btnRechazar", btnActionType: "danger", btnActionText: LanguageHelper.Rechazar, btnActionFunction: "Rechazar", btnCancelId: "btnRechazarCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanStatusAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Nombre")

