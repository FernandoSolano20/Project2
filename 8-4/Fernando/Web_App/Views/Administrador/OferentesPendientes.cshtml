@using Web_App.AppCode.Helper.Language
@using WebApp.Helpers
<script src="~/Scripts/Views/Administrador/OferentesPendientes.js"></script>
@{
    ViewBag.Title = "OferentesPendientes";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">@LanguageHelper.TiposTrabajo</h1>
        </div>

        <hr>

        <div class="col-12">
            <p class="lead">@LanguageHelper.MantenimientoTiposTrabajoDescripcion</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.Identificacion + "," + LanguageHelper.Nombre + "," + LanguageHelper.PrimerApellido + "," + LanguageHelper.CorreoElectronico + "," + LanguageHelper.Aceptar + "," + LanguageHelper.Rechazar;
}

@Html.CtrlTable(viewName: "OferentesPendientes", id: "tblOferente", title: LanguageHelper.TiposTrabajo,
    columnsTitle: columnsTitle, ColumnsDataName: "Identificacion,Nombre,PrimerApellido,Email", onSelectFunction: "BindFields", colorHeader: "red", hasButton: false, buttonId: "", buttonType: "", buttonLabel: "", buttonFunction: "", buttonToggle: "", buttonTarget: "")

