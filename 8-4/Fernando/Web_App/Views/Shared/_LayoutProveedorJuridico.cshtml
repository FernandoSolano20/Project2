<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MASTER</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/Content/compiled-4.14.1.min.css">
    <!-- MDBootstrap Datatables  -->
    <link href="~/Content/addons/datatables.min.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="~/Content/style.css">


    <!-- jQuery -->
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/Scripts/compiled.min.js"></script>
    <script src="~/Scripts/Services/SelectAjax/selectComponent.js"></script>
    <!-- Control Actions Script -->
    <script src="~/Scripts/Views/ControlActions.js"></script>
    <!-- Data Tables Script-->
    <script src="~/Scripts/addons/datatables.min.js"></script>
    <!-- FontAwesome Script-->
    <script src="https://kit.fontawesome.com/a993a78eb6.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/Services/Helper/Prototypes.js"></script>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar elegant-color">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand brand-font" href="#">
                <strong>MASTER</strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--Left-->
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <!-- Links -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">
                            Inicio
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Trabajos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Estadísticas</a>
                    </li>

                </ul>
                <!--Right-->
                <ul class="navbar-nav ml-auto nav-flex-icons">

                    <li class="nav-item avatar dropdown">
                        <a class="nav-link p-0 dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            Juana de Arco
                            <i class="fas fa-user"></i>
                        </a>

                        <div class="dropdown-menu dropdown-menu-right dropdown-dark"
                             aria-labelledby="navbarDropdownMenuLink-333">
                            <a class="dropdown-item" href="#">Perfil</a>
                            <a class="dropdown-item" href="@Url.Action("vConfiguracion", "Configuracion")">Configuraciones</a>
                            <a class="dropdown-item" href="#">Cerrar sesión</a>

                        </div>

                    </li>
                </ul>

            </div>

        </div>
    </nav>
    <!-- Navbar -->

    <div class="alert alert-danger alert-dismissable" style="display: none;" id="alert_container">
        <button type="button" class="close" onclick="$('.alert').hide()">×</button>
        <span id="alert_message"></span>
    </div>

    <div class="container body-content pt-xl-5">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>



</body>
</html>
